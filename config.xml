<?xml version='1.0' encoding='utf-8'?>
<widget id="com.meltcreative.LICK" version="0.0.5" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>LICK</name>
    <description>
        Notes so simple, your tongue can use it.
    </description>
    <author email="e@ject.ch" href="http://ject.ch">
        Melt Creative Industries
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="KeyboardDisplayRequiresUserAction" value="false" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <icon src="app/icon/apple-touch-icon.png" />

    <platform name="ios">
        <splash src="app/ios/splash/Default~iphone.png" width="320" height="480"/>
        <splash src="app/ios/splash/Default@2x~iphone.png" width="640" height="960"/>
        <splash src="app/ios/splash/Default-Portrait~ipad.png" width="768" height="1024"/>
        <splash src="app/ios/splash/Default-Portrait@2x~ipad.png" width="1536" height="2048"/>
        <splash src="app/ios/splash/Default-Landscape~ipad.png" width="1024" height="768"/>
        <splash src="app/ios/splash/Default-Landscape@2x~ipad.png" width="2048" height="1536"/>
        <splash src="app/ios/splash/Default-568h@2x~iphone.png" width="640" height="1136"/>
        <splash src="app/ios/splash/Default-667h.png" width="750" height="1334"/>
        <splash src="app/ios/splash/Default-736h.png" width="1242" height="2208"/>
        <splash src="app/ios/splash/Default-Landscape-736h.png" width="2208" height="1242"/>

        <icon src="app/ios/icon/icon-60@3x.png" width="180" height="180" />
        <icon src="app/ios/icon/icon-60.png" width="60" height="60" />
        <icon src="app/ios/icon/icon-60@2x.png" width="120" height="120" />
        <icon src="app/ios/icon/icon-76.png" width="76" height="76" />
        <icon src="app/ios/icon/icon-76@2x.png" width="152" height="152" />
        <icon src="app/ios/icon/icon-40.png" width="40" height="40" />
        <icon src="app/ios/icon/icon-40@2x.png" width="80" height="80" />
        <icon src="app/ios/icon/icon.png" width="57" height="57" />
        <icon src="app/ios/icon/icon@2x.png" width="114" height="114" />
        <icon src="app/ios/icon/icon-72.png" width="72" height="72" />
        <icon src="app/ios/icon/icon-72@2x.png" width="144" height="144" />
        <icon src="app/ios/icon/icon-small.png" width="29" height="29" />
        <icon src="app/ios/icon/icon-small@2x.png" width="58" height="58" />
        <icon src="app/ios/icon/icon-50.png" width="50" height="50" />
        <icon src="app/ios/icon/icon-50@2x.png" width="100" height="100" />
    </platform>
</widget>
